# ===========================================
# UGC TICKETING - PRODUCTION ENVIRONMENT
# ===========================================
# Copy this file to .env.local and fill in values
# NEVER commit .env.local to version control

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from: Supabase Dashboard > Project Settings > API

# Project URL (public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Anon/Public Key (public - safe for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service Role Key (SECRET - server-side only!)
# This bypasses RLS - keep it secret!
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Get from: Supabase Dashboard > Project Settings > Database > Connection string

# Direct connection (for migrations)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# Pooled connection (for application - recommended for serverless)
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:6543/postgres?pgbouncer=true

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Public URL of your application
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Application name (shown in UI)
NEXT_PUBLIC_APP_NAME=UGC Ticketing

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# For sending notifications

# SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx

# Or Resend
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# From address for emails
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=UGC Ticketing

# ===========================================
# FILE STORAGE (Optional)
# ===========================================
# If using external storage instead of Supabase Storage

# AWS S3
# AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
# AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# AWS_REGION=ap-southeast-1
# AWS_BUCKET_NAME=ugc-ticketing-uploads

# ===========================================
# MONITORING & ANALYTICS (Optional)
# ===========================================

# Sentry for error tracking
SENTRY_DSN=https://xxxx@sentry.io/xxxxx
SENTRY_AUTH_TOKEN=sntrys_xxxxxxxxxxxx

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (auto-enabled on Vercel)
# No configuration needed

# ===========================================
# SECURITY
# ===========================================

# JWT Secret (if using custom JWT)
# JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# Allowed origins for CORS (comma-separated)
# ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================

# Enable/disable features
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
# NEXT_PUBLIC_MAINTENANCE_MODE=false

# ===========================================
# RATE LIMITING
# ===========================================

# Requests per minute per IP
# RATE_LIMIT_PER_MINUTE=100

# Requests per hour per user
# RATE_LIMIT_PER_HOUR=1000